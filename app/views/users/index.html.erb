<% provide(:title, "ユーザー管理") %>
<div class="container font_color ">
  <h1 class="page-header text-center">ユーザー管理</h1>
  <div class="list-group">
    <ul class="users">
      <% @users.each do |user| %>
        <li>
          <%= user.name%>
          <% if current_user.admin? && !current_user?(user) %>
          | <%= link_to "削除", user, method: :delete,
                                      date: {confirm: "You sure?"}, class: "list-group-item-heading" %>
          <% end %>
        </li>
      <% end %>
      <%= paginate @users %>
    </ul>
  </div>
</div>
