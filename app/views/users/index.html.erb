<% provide(:title, "ユーザー管理") %>
<div class="page-header">
  <h1>ユーザー管理</h1>
</div>
<div class="list-group">
  <ul class="users">
    <% @users.each do |user| %>
      <li>
        <%= user.name%>
        <% if current_user.admin? && !current_user?(user) %>
        | <%= link_to "削除", user, method: :delete,
                                    date: {confirm: "You sure?"}, class: "list-group-item-heading" %>
        <% end %>
      </li>
    <% end %>
    <%= paginate @users %>
  </ul>
  </div>
