<% provide(:title, "ユーザー管理") %>
<h1>プロフィールの更新</h1>

<ul class="users">
  <% @users.each do |user| %>
  <li>
    <%= link_to user.name, user %>
    <% if current_user.admin? && !current_user?(user) %>
    | <%= link_to "削除", user, method: :delete,
                                date: {confirm: "You sure?"} %>
  <% end %>
  </li>
  <% end %>
  <%= paginate @users %>
</ul>
